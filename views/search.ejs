<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <title>BLOGING</title>

    <link rel="stylesheet" href="/index.css">
</head>
<body style="background-image: url(../public/Saldiri.png);">

  <%- include('base.ejs'); -%>

      <center>
      <!-- Posts work backwards that means that the posts are reversed -->
    <% posts.slice().reverse().forEach((post) => { %>
        
        
        
        <!-- <%= post.id %> -->

        <div class="simple-space col-sm-6">
            <div class="card">
              <div class="card-body">
              <img src="<%=post.image%>" alt="" height="100" width="100" > <br> <h4><span class="badge badge-dark"><%= post.id %></span> <%= Truncate(post.title, 50)%></h4>
                <p class="date"> <%= post.post_date %></p>
                <!-- <p class="card-text"><%= Truncate(post.content, 200) %></p> -->
                <a href="/post/<%= post.id %>" class="btn btn-primary">Read</a>
                
                
                <% if(verified) { %>

                  <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Actions
                    </button>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="/edit/<%= post.id %>">Edit</a>
                      <a class="dropdown-item" href="/delete/<%= post.id %>">Delete</a>
                    </div>
                  </div>
                <% } %>


              </div>
            </div>
        </div>

    <% }); %>

    </center>
    <br>
</body>
</html>